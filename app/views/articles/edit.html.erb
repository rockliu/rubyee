<% javascript_include_tag "/javascripts/textile-editor.js" %>
<% if @article.errors.count > 0 %>
<div class="errors">
    <%= error_messages_for :article %>
</div>
<% end %>

<div id="create_article">
  <% form_for @article do |f| -%>
  <table class="article_index">
    <tr class="title">
      <td>编辑资讯</td>
    </tr>
    
    <tr>
      <td>
        <div style="width:665px;">
        <div style="margin-top:10px;margin-left:14px;width:650px">
            <%= link_to '取消',articles_url %>
         </div>
        <div style="margin-top:10px;margin-left:14px;width:650px">
          <b>标题:</b><br />
          <%= f.text_field :title,:class=>'article_text'%>
          </div>
        <div style="margin-top:10px;margin-left:14px;width:650px">
          <b>摘要:</b><br />
          <%= f.text_area :synopsis,:class=>'article_textarea' %>
        </div>
        <div style="margin-top:10px;margin-left:14px;width:650">
          <b>内容:</b><br />
          <%= textile_editor 'article', 'body', :class=>'article_textarea1'-%>
        </div>
        <div style="margin-top:10px;margin-left:14px;width:650px">
          <b>分类:</b><br />
          <%= f.collection_select :category_id,Category.find(:all),:id,:name %>
        </div>
        <div style="margin-top:10px;margin-left:14px;width:650px">
          <b>是否发表:</b><br />
          <%= f.check_box :published %>
        </div>
        </div>
      </td>
    </tr>
  </table>
  <div style="margin-top:10px;margin-left:14px;margin-bottom:10px">
  <%= submit_tag '保存',:class=>"button"%>
  </div>
  <%= textile_editor_initialize -%>
  <% end -%>
</div>
