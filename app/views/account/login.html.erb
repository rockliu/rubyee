<div id="login">
<% form_for :user, :url => {:action => 'authenticate'} do |f| -%>
<table class="login">
  <tr  class="title">
    <td><b>用户登录</b></td>
  </tr>
  <tr style="height:10px">
  </tr>
  <tr>
    <td>
      <div style="margin-left:15px">
        <b>用户名：</b><br />
        <%= f.text_field :username,:class=>"text" %>
      </div>
      <div style="margin-left:15px;margin-top:10px">
        <b>密码：</b><br />
        <%= f.password_field :password,:class=>"text" %>
      </div>
      <div style="margin-left:15px;margin-top:10px">
        <%= submit_tag '登录' ,:class=>"button"%>
      </div>
      <div style="margin-left:15px;margin-top:10px;">
      </div>
    </td>
  </tr>
</table>
<% end %>
</div>

