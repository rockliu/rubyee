<% if @post.errors.count > 0 %>
<div class="errors">
    <%= error_messages_for :post %>
</div>
<% end %>
<div id="create_topic">
  <% form_for :post,:url => forum_topic_posts_path(:forum_id => @topic.forum,
                                     :topic_id => @topic ) do |f| -%>
  <table class="topic_new">
    <tr class="title">
      <td>创建帖子</td>
    </tr>
    <tr>
      <td>
        <div style="margin-top:10px;margin-left:14px;">
            <%= link_to '取消',forum_topic_posts_path(:id => @topic,:forum_id => @topic.forum) -%>
         </div>
        <div style="margin-top:10px;margin-left:14px;word-wrap:break-word;">
        <b>主题: <%=@topic.name%></b>
        </div>
        <div style="margin-top:10px;margin-left:14px;">
        <b>帖子内容:</b><br />
        <%= f.text_area :body,:class=>"post_area" -%>
        </div>
      </td>
    </tr>
  </table>
  <div style="margin-left:14px;margin-top:10px;margin-bottom:10px;">
  <%= submit_tag '创建',:class=>"button"%>
  </div>
  <% end -%>
</div>