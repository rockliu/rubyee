<% if @user.errors.count > 0 %>
<div class="errors">
    <%= error_messages_for :user %>
</div>
<% end %>
<div id="usernew">
    <% form_for :user,:url => users_path do |f| -%>
    <table class="register">
        <tr  class="title">
            <td><b>用户注册</b></td>
        </tr>
        <tr style="height:10px">
        </tr>
        <tr>
            <td>
                <div style="margin-left:15px;margin-top:10px">
                    <b>用户名：</b><br />
                    <%= f.text_field :username,:size => 28,:class=>"text" %>
                </div>
                <div style="margin-left:15px;margin-top:10px">
                    <b>电子邮件：</b><br />
                    <%= f.text_field :email,:size => 28,:class=>"text" %>
                </div>
                <div style="margin-left:15px;margin-top:10px">
                    <b>密码：</b><br />
                    <%= f.password_field :password,:size => 28,:class=>"text" %>
                </div>
                <div style="margin-left:15px;margin-top:10px">
                    <b>密码：</b><br />
                     <%= f.password_field :password_confirmation,:size => 28,:class=>"text" %>
                </div>
                <div style="margin-left:15px;margin-top:10px">
                    <b>个人资料：</b><br />
                    <%= f.text_area :profile,:class=>'textarea' %>
                </div>
                <div style="margin-left:15px;margin-top:10px">
                    <%= submit_tag '注册' ,:class => "button"%>
                </div>
                <div style="margin-left:15px;margin-top:10px">
                </div>
            </td>
        </tr>
    </table>
    <% end -%>
</div>
